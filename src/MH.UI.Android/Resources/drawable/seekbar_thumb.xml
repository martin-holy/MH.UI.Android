<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:a="http://schemas.android.com/apk/res/android">
	<item a:state_pressed="true">
		<shape a:shape="rectangle">
			<solid a:color="@color/gray8"/>
			<stroke a:width="1dp" a:color="@color/gray2"/>
			<size a:width="10dp" a:height="20dp"/>
			<corners a:radius="2dp"/>
		</shape>
	</item>

	<item>
		<shape a:shape="rectangle">
			<solid a:color="@color/gray4"/>
			<stroke a:width="1dp" a:color="@color/gray2"/>
			<size a:width="10dp" a:height="20dp"/>
			<corners a:radius="2dp"/>
		</shape>
	</item>
</selector>