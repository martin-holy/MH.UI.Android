<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:a="http://schemas.android.com/apk/res/android">
  <item a:state_checked="true">
    <layer-list>
      <item a:width="18dp" a:height="18dp">
        <shape a:shape="oval">
          <solid a:color="@android:color/transparent"/>
          <stroke a:width="1dp" a:color="@color/c_static_bo"/>
        </shape>
      </item>

      <item a:width="10dp" a:height="10dp" a:gravity="center">
        <shape a:shape="oval">
          <solid a:color="@color/c_accent"/>
        </shape>
      </item>
    </layer-list>
  </item>

  <item>
    <layer-list>
      <item a:width="18dp" a:height="18dp">
        <shape a:shape="oval">
          <solid a:color="@android:color/transparent"/>
          <stroke a:width="1dp" a:color="@color/c_static_bo"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
