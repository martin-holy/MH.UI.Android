<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:a="http://schemas.android.com/apk/res/android"
  a:layout_width="wrap_content"
  a:layout_height="wrap_content"
  a:orientation="horizontal"
  a:padding="@dimen/general_padding"
  a:clickable="true"
  a:focusable="true"
  a:background="@drawable/tab_item_header_background">
  
  <ImageView
    a:id="@+id/icon"
    a:layout_width="@dimen/icon_size"
    a:layout_height="@dimen/icon_size"
    a:layout_gravity="center_vertical"/>
  
  <TextView
    a:id="@+id/text"
    a:layout_width="wrap_content"
    a:layout_height="wrap_content"
    a:layout_gravity="center_vertical"
    a:textColor="@color/c_static_fo"/>
</LinearLayout>