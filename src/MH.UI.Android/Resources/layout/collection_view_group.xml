<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:a="http://schemas.android.com/apk/res/android"
  a:layout_width="match_parent"
  a:layout_height="wrap_content"
  a:orientation="horizontal"
  a:padding="4dp"
  a:gravity="center_vertical">
  
  <ImageView
    a:id="@+id/expanded_icon"
    a:layout_width="32dp"
    a:layout_height="32dp"
    a:layout_marginStart="4dp"
    a:layout_gravity="center_vertical"
    a:src="@drawable/tree_item_expanded_selector"
    a:clickable="true"
    a:focusable="true"
    a:scaleType="center"/>

  <ImageView
    a:id="@+id/icon"
    a:layout_width="24dp"
    a:layout_height="24dp"
    a:layout_marginStart="8dp"
    a:layout_gravity="center_vertical"/>
  
  <TextView
    a:id="@+id/name"
    a:layout_width="wrap_content"
    a:layout_height="wrap_content"
    a:layout_marginStart="8dp"
    a:textColor="@color/c_static_fo"
    a:layout_gravity="center_vertical"/>
</LinearLayout>