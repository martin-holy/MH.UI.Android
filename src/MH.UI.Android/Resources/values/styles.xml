<?xml version="1.0" encoding="utf-8" ?> 
<resources>
  <style name="MHAppTheme" parent="android:Theme.NoTitleBar">
    <item name="android:windowBackground">@color/c_static_ba</item>
    <item name="android:imageButtonStyle">@style/mh_ImageButton</item>
    <item name="android:progressBarStyle">@style/mh_ProgressBar</item>
  </style>
  
  <style name="mh_ImageButton" parent="android:Widget.ImageButton">
    <item name="android:background">@drawable/button_background</item>
    <item name="android:padding">@dimen/general_padding</item>
    <item name="android:gravity">center</item>
  </style>
  
  <style name="mh_ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
    <item name="android:layout_height">20dp</item>
    <item name="android:progressDrawable">@drawable/progress_bar_progress</item>
    <item name="android:indeterminate">false</item>
  </style>
</resources>