<?xml version="1.0" encoding="utf-8" ?> 
<resources>
  <style name="MHAppTheme" parent="android:Theme.NoTitleBar">
    <item name="android:windowBackground">@color/c_static_ba</item>    
    <item name="android:editTextStyle">@style/mh_EditText</item>    
    <item name="android:imageButtonStyle">@style/mh_ImageButton</item>
		<item name="android:dropDownListViewStyle">@style/mh_ListView_DropDownList</item>
    <item name="android:progressBarStyle">@style/mh_ProgressBar</item>
		<item name="android:seekBarStyle">@style/mh_SeekBar</item>
		<item name="android:spinnerStyle">@style/mh_Spinner</item>
    <item name="android:textViewStyle">@style/mh_TextView</item>
    <item name="android:checkboxStyle">@style/mh_CheckBox</item>
    <item name="android:radioButtonStyle">@style/mh_RadioButton</item>
    <item name="iconButtonStyle">@style/mh_IconButton</item>
  </style>
  
  <style name="mh_EditText" parent="android:Widget.EditText">
    <item name="android:background">@drawable/view_border</item>
    <item name="android:paddingStart">@dimen/spacing</item>
    <item name="android:paddingTop">@dimen/spacing</item>
    <item name="android:paddingEnd">@dimen/spacing</item>
    <item name="android:paddingBottom">@dimen/spacing</item>
    <item name="android:textColor">@color/c_static_fo</item>
  </style>
  
  <style name="mh_ImageButton" parent="android:Widget.ImageButton">
    <item name="android:background">@drawable/image_button_background</item>
    <item name="android:padding">@dimen/spacing</item>
    <item name="android:gravity">center</item>
  </style>

	<style name="mh_DialogButton" parent="android:Widget.Button">
		<item name="android:background">@drawable/button_background</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:padding">@dimen/spacing</item>
		<item name="android:textColor">@drawable/color_foreground</item>
	</style>

	<style name="mh_ListView_DropDownList" parent="@android:Widget.ListView.DropDown">
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">0dp</item>
		<item name="android:padding">1dp</item>
		<item name="android:clipToPadding">false</item>
	</style>
  
  <style name="mh_ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
    <item name="android:layout_height">20dp</item>
    <item name="android:progressDrawable">@drawable/progress_bar_progress</item>
    <item name="android:indeterminate">false</item>
  </style>

	<style name="mh_SeekBar" parent="android:Widget.SeekBar">
		<item name="android:progressDrawable">@drawable/seekbar_progress</item>
		<item name="android:thumb">@drawable/seekbar_thumb</item>
		<item name="android:thumbOffset">5dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:progressTint">@color/c_accent</item>
	</style>

	<style name="mh_Spinner" parent="@android:Widget.Spinner">
		<item name="android:background">@drawable/view_border</item>
		<item name="android:popupBackground">@drawable/view_border</item>
		<item name="android:textColor">@color/c_static_fo</item>
		<item name="android:padding">@dimen/spacing</item>
		<item name="android:spinnerMode">dropdown</item>
	</style>
  
  <style name="mh_TextView" parent="android:Widget.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@drawable/color_foreground</item>
    <item name="android:padding">@dimen/spacing</item>
  </style>
  
  <style name="mh_CheckBox" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/check_box_selector</item>
    <item name="android:background">@null</item>
  </style>

  <style name="mh_RadioButton" parent="android:Widget.CompoundButton.RadioButton">
    <item name="android:button">@drawable/radio_button_selector</item>
    <item name="android:background">@null</item>
    <item name="android:padding">@dimen/spacing</item>
  </style>
  
  <style name="mh_IconButton" parent="mh_ImageButton">
    <item name="android:layout_width">@dimen/icon_button_size</item>
    <item name="android:layout_height">@dimen/icon_button_size</item>
    <item name="android:minWidth">@dimen/icon_button_size</item>
    <item name="android:minHeight">@dimen/icon_button_size</item>
  </style>
</resources>